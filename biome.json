{
    "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "ignore": [],
        "attributePosition": "auto",
        "indentStyle": "tab",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 110
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "single",
            "quoteStyle": "single",
            "quoteProperties": "asNeeded",
            "semicolons": "asNeeded",
            "trailingComma": "none",
            "indentStyle": "tab",
            "indentWidth": 4
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    }
}
